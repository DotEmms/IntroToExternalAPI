@model MovieCreateViewModel

<form asp-controller="Movies" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title" />
    </div>

    <div class="form-group">
        <label asp-for="Rating"></label>
        <input class="form-control" asp-for="Rating" />
    </div>

    <div class="form-group">
        <select asp-for="Genre" asp-items="Html.GetEnumSelectList<Genre>()">
            <option selected="selected" value="value">Please select a genre</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="ReleaseDate"></label>
        <input class="form-control" asp-for="ReleaseDate" />
    </div>

    <button class="btn btn-primary" type="submit">Add a Movie</button>
</form>